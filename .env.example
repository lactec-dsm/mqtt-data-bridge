# ---------------------------------------------
# BANCO DE DADOS
# ---------------------------------------------
# Exemplo para SQLite (desenvolvimento local):
# DB_URL=sqlite:///mqtt_store.db

# Exemplo para PostgreSQL (produção ou escala):
DB_URL=postgresql+psycopg2://mqtt_bridge:mqtt_bridge_pwd@localhost:5432/mqtt_bridge_db


# ---------------------------------------------
# MQTT — CONFIGURAÇÕES DO BROKER
# ---------------------------------------------
# Host do broker MQTT (Mosquitto, EMQX, HiveMQ, etc.)
MQTT_BROKER_HOST=localhost

# Porta padrão do broker MQTT
MQTT_BROKER_PORT=1883

# Raiz dos tópicos monitorados pelo coletor.
# Em produção, cada dispositivo publica em algo como:
#   SMA-123456789/data
# Para coletar tudo, deixe como "#".
MQTT_TOPIC_ROOT=#


# ---------------------------------------------
# MQTT CONSUMER — CONFIGURAÇÕES DO COLETOR
# ---------------------------------------------
# Quantidade máxima de mensagens processadas por segundo
# (útil para evitar overload em produção)
CONSUMER_RATE_LIMIT=200

# Habilita salvar o payload bruto da mensagem JSON no banco
# (útil para auditoria e debugging)
SAVE_RAW_PAYLOAD=true

# Quantidade de registros em cada commit (batch insert)
BATCH_SIZE=100


# ---------------------------------------------
# SIMULADOR MQTT — EM DESENVOLVIMENTO
# ---------------------------------------------
# Quantos dispositivos simulados publicarão dados
SIMULATOR_DEVICE_COUNT=5

# Lista de measurementIds simulados (separados por vírgula)
SIMULATOR_MEASUREMENT_IDS=pAcGrid,vAcGrid,iAcGrid,fAcGrid,qAcGrid

# Intervalo de publicação do simulador, em segundos
SIMULATOR_INTERVAL_SECONDS=5

# Prefixo do deviceId para os simuladores
SIMULATOR_DEVICE_PREFIX=SMA-SIM-DEVICE


# ---------------------------------------------
# LOGS
# ---------------------------------------------
# Nível de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
